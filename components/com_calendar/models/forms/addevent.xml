<?xml version="1.0" encoding="utf-8"?>
<form>
        <fieldset>
                <field
                        name="id"
                        type="hidden"
                />
                <field
                        name="name"
                        type="text"
                        label="COM_CALENDAR_ADDEVENT_NAME_LABEL"
                        description="COM_CALENDAR_ADDEVENT_NAME_DESC"
                        size="40"
                        class="inputbox"
                        default=""
						required="true"
                />
                <field
                        name="alias"
                        type="text"
                        label="COM_CALENDAR_ADDEVENT_ALIAS_LABEL"
                        description="COM_CALENDAR_ADDEVENT_ALIAS_DESC"
                        size="40"
                        class="inputbox"
                        
                />
                <field 
                		name="date"
                		type="calendar"
                		label="COM_CALENDAR_ADDEVENT_DATE_LABEL"
                		description="COM_CALENDAR_ADDEVENT_DATE_DESC"
                		class="inputbox"
                		format="%Y-%m-%d"
                		size="22"
                		filter="user_utc"
						required="true"
                />
                <field
                        name="website"
                        type="text"
                        label="COM_CALENDAR_ADDEVENT_WEBSITE_LABEL"
                        description="COM_CALENDAR_ADDEVENT_WEBSITE_DESC"
                        size="40"
                        class="inputbox"
                        default=""
                />
                <field
                        name="location"
                        type="text"
                        label="COM_CALENDAR_ADDEVENT_LOCATION_LABEL"
                        description="COM_CALENDAR_ADDEVENT_LOCATION_DESC"
                        size="40"
                        class="inputbox"
                        default=""
                />
                <field
                        name="details"
                        type="editor"
                        label="Events Details"
                        description="COM_CALENDAR_ADDEVENT_DETAILS_DESC"
                        class="inputbox"
						buttons="false"
						required="true"
                />
                <field
                        name="contact_details"
                        type="editor"
                        label="COM_CALENDAR_ADDEVENT_CONTACT_DETAILS_LABEL"
                        description="COM_CALENDAR_ADDEVENT_CONTACT_DETAILS_DESC"
                        class="inputbox"
                        buttons="false"
						
                />
        </fieldset>
        
        
        
        
        <fieldset name="tags" label="Event Tags" addfieldpath="/components/com_calendar/models/fields">
			<field 
				name="tag_id"
				multiple="true"
				type="eventtags"
				label="COM_CALENDAR_ADDEVENT_TAGS_LABEL"
				description="COM_CALENDAR_ADDEVENT_TAGS_DESC"
			/>

		</fieldset>
		
		<fieldset name="basic" label="COM_CALENDAR_ATTRIBS_FIELDSET_LABEL">
			<field
				name="show_title"
				type="list"
				label="JGLOBAL_SHOW_TITLE_LABEL"
				description="JGLOBAL_SHOW_TITLE_DESC">
				<option value="">JGLOBAL_USE_GLOBAL</option>
				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
			</field>
		</fieldset>
		
        
</form>
